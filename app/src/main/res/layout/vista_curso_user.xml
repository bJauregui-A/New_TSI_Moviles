<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
				android:id="@+id/cursoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="16dp"
                android:text="Detalles del Curso"
                android:textColor="#333333"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/vista_imagen"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="#E0E0E0"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen del curso" />

			<TextView
					android:id="@+id/inactivo"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/black"
			/>

            <TextView
                android:id="@+id/vista_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Curso"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/vista_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del curso"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/vista_dirigidoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirigido a: Estudiantes"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/vista_modalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modalidad: Presencial"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/vista_horas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duración: 40 horas"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/vista_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio: $200"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="#FFFFFF" />
            <TextView
                android:id="@+id/vista_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio: $200"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_comprar_vista"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Comprar"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/black" />


                <Button
                    android:id="@+id/btn_cancelar_vista"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/black" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
