<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar/Editar Curso"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:padding="16dp"
			/>

            <EditText
                android:id="@+id/nombreCurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese Nombre del Curso"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
				android:digits=" qwertyuiopñlkjhgfdsazxcvbnmQWERTYUIOPÑLKJHGFDSAZXCVBNM,.1234567890"
                android:inputType="text" />

            <EditText
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese descripción"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:inputType="textMultiLine"
				android:digits=" qwertyuiopñlkjhgfdsazxcvbnmQWERTYUIOPÑLKJHGFDSAZXCVBNM,.1234567890"
                android:lines="3" />

            <EditText
                android:id="@+id/dirigidoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirigido A"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
				android:digits=" qwertyuiopñlkjhgfdsazxcvbnmQWERTYUIOPÑLKJHGFDSAZXCVBNM,.1234567890"
                android:inputType="text" />

            <EditText
                android:id="@+id/Modalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modalidad (Presencial, Virtual, Híbrida)"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
				android:digits=" qwertyuiopñlkjhgfdsazxcvbnmQWERTYUIOPÑLKJHGFDSAZXCVBNM,.1234567890"
                android:inputType="text" />

            <EditText
                android:id="@+id/horas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duración Horas"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
				android:digits="1234567890"
                android:inputType="number" />

            <EditText
                android:id="@+id/precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
				android:digits="1234567890"
                android:inputType="number" />

            <EditText
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Link de inscripción"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
				android:digits="/: qwertyuiopñlkjhgfdsazxcvbnmQWERTYUIOPÑLKJHGFDSAZXCVBNM,.1234567890"
                android:inputType="textUri" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancelar_agregar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btn_guardar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Guardar"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
