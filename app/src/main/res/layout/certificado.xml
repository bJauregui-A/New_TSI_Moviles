<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="#FFFDF7"
				android:padding="32dp"
				android:orientation="horizontal" tools:ignore="ExtraText">

	<View
			android:id="@+id/borde"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	/>

	<LinearLayout
			android:id="@+id/contenedor_texto"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="40dp">

		<TextView
				android:id="@+id/txt_titulo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Arredondo y Sims"
				android:textSize="36sp"
				android:textStyle="bold"
				android:textColor="#2E2E2E"
				android:letterSpacing="0.05"
				android:fontFamily="serif"
				android:layout_marginBottom="40dp" />

		<TextView
				android:id="@+id/txt_subtitulo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Certificado de Aprobación"
				android:textSize="22sp"
				android:textColor="#6E6E6E"
				android:fontFamily="serif"
				android:layout_marginBottom="60dp" />

		<TextView
				android:id="@+id/txt_certificado"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Mediante este certificado acreditamos que __________________ aprobó con nosotros."
				android:textSize="20sp"
				android:textColor="#444444"
				android:fontFamily="serif"
				android:gravity="center"
				android:lineSpacingExtra="6dp"
				android:paddingHorizontal="16dp" />
	</LinearLayout>

</RelativeLayout>
